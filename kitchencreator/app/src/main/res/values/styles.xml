<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/capehoney</item>
        <item name="colorPrimaryDark">@color/seabuckthorn</item>
        <item name="colorAccent">@color/capehoney</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/capehoney</item>
        <item name="colorPrimaryDark">@color/seabuckthorn</item>
        <item name="colorAccent">@color/capehoney</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="CollaspseAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Material.Title" tools:targetApi="lollipop">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="RadioDialogButton" parent="Theme.AppCompat.Light.Dialog.Alert" >

        <item name="android:background">@android:color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/RadioDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/RadioDialogButtonStyle</item>
    </style>
    <style name="RadioDialogButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog" >

        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="RadioDialogFadeanim"  >

        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/capehoney</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>


</resources>
