<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kitchencreator.kitchencreator.Dashboard.Orderdetails"
    android:background="@drawable/background3"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/trans_white">


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/orderinfo"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            android:background="@color/capehoney"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_vertical"
                >


                <TextView
                    android:id="@+id/orderid1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Id"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/ordername1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Name"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/orderphone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Phone"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/orderaddress1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Address"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/ordertotal1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Total"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/orderstatus1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Status"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />





            </LinearLayout>




        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/Text"
            android:layout_below="@+id/orderinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Details"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/orderdet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Text"

        />

    </RelativeLayout>

</RelativeLayout>
